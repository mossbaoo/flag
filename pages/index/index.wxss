.container .topCollect {
  display: flex;
  justify-content: center;
  align-items: center;
  background: #333;
  font-size: 30rpx;
  color: #fff;
  height: 0;
  overflow: hidden;
  transition: all 0.3s;
}
.container .topCollect.on {
  height: 100rpx;
}
.container .topCollect .icon-more {
  font-size: 44rpx;
  padding: 0 10rpx;
}
.container .topCollect .icon-jiantou1 {
  font-size: 50rpx;
  padding-left: 10rpx;
}
.container .main {
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
  border: 1px solid #ccc;
  margin: 30rpx 30rpx 0;
  border-radius: 10rpx;
}
.container .main .user {
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.container .main .user .head image {
  width: 100rpx;
  height: 100rpx;
  display: block;
  border-radius: 50%;
}
.container .main .user .name {
  font-size: 30rpx;
  color: #333;
  padding-left: 20rpx;
}
.container .main .login button {
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.container .main .login button .head image {
  width: 60rpx;
  height: 60rpx;
  padding: 20rpx;
  display: block;
  border-radius: 50%;
  background: #eee;
}
.container .main .login button .name {
  font-size: 30rpx;
  color: #333;
  padding-left: 20rpx;
}
.container .main .right {
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.container .main .right .item text {
  display: block;
  width: 60rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 50%;
  font-size: 34rpx;
  color: #fff;
}
.container .main .right .item.collect text {
  background: linear-gradient(#ff6600, #ff9933);
}
.container .main .right .item.share {
  margin-left: 20rpx;
}
.container .main .right .item.share text {
  background: linear-gradient(#ff6600, #ff9933);
}
.container .title {
  font-size: 50rpx;
  color: #000;
  line-height: 60rpx;
  padding-top: 140rpx;
  letter-spacing: 5rpx;
}
.container .text {
  font-size: 30rpx;
  color: #333;
  line-height: 50rpx;
}
.container .button {
  padding-top: 750rpx;
}
.container .button button {
  width: 300rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 100rpx;
  border: 1px solid #333;
  font-size: 30rpx;
  color: #333;
  box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.2);
}
.container .login_mask {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 98;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}
.container .login_box {
  position: fixed;
  top: 300rpx;
  left: 100rpx;
  z-index: 99;
  width: 550rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
  padding: 30rpx 0;
}
.container .login_box .logo image {
  width: 120rpx;
  height: 120rpx;
  display: block;
  border-radius: 50%;
}
.container .login_box .text {
  font-size: 30rpx;
  color: #333;
  padding-top: 20rpx;
}
.container .login_box .btn {
  padding-top: 50rpx;
}
.container .login_box .btn button {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 10rpx;
  background: #333;
  font-size: 30rpx;
  color: #fff;
}
