.container {
  padding: 30rpx 0 90rpx;
}
.container .canvas_w {
  position: relative;
}
.container .canvas_w .canvas {
  position: absolute;
  left: 0;
  top: 0;
  z-index: 2;
  width: 100%;
}
.container .canvas_w .shareCanvas {
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
  width: 100%;
}
.container .canvas_w canvas {
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 0 6rpx 6rpx rgba(0, 0, 0, 0.1);
  margin: 0 auto;
}
.container .canvas_w .canvasImage {
  width: 100%;
}
.container .canvas_w .canvasImage image {
  display: block;
  margin: 0 auto;
  box-shadow: 0 6rpx 6rpx rgba(0, 0, 0, 0.1);
}
.container .bottom {
  display: flex;
  justify-content: center;
  padding: 50rpx 0;
}
.container .bottom button {
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0;
  border-radius: 70rpx;
  font-size: 26rpx;
  margin: 0 20rpx;
  box-shadow: 0 5rpx 5rpx rgba(0, 0, 0, 0.2);
  box-sizing: border-box;
}
.container .bottom button:nth-child(1) {
  background: none;
  border: 1px solid #ff6600;
  color: #ff6600;
}
.container .bottom button:nth-child(2) {
  background: linear-gradient(#ff9933, #ff6600);
  color: #fff;
}
.container .pickerButton {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 999;
  width: 100%;
  background: #ff6600;
  text-align: center;
  line-height: 90rpx;
  font-size: 30rpx;
  color: #fff;
}
.container .pickerMenu {
  position: fixed;
  left: 0;
  bottom: 220rpx;
  z-index: 999;
  width: 100%;
  background: #fff;
}
.container .pickerMenu .menu {
  display: flex;
}
.container .pickerMenu .menu .item {
  flex: 1;
  line-height: 80rpx;
  text-align: center;
}
.container .pickerMenu .menu .item.on {
  color: #ff6600;
}
.container .pickerMenu .menu .line {
  flex: 0 0 2rpx;
  height: 50rpx;
  margin-top: 15rpx;
  background: #eee;
}
.container .pickerMenu .menu .close {
  flex: 0 0 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.container .pickerMenu .menu .close .icon {
  width: 36rpx;
  height: 36rpx;
  display: block;
}
.container .pickerMenu .border {
  height: 2rpx;
  background: #eee;
}
.container .colorPicker {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 999;
  width: 100%;
  background: #fff;
  height: 220rpx;
}
.container .colorPicker .level1 {
  width: 100%;
  padding-top: 40rpx;
  padding-bottom: 30rpx;
}
.container .colorPicker .level1 .list {
  width: 100%;
  overflow-x: scroll;
}
.container .colorPicker .level1 .list .item {
  width: 60rpx;
  height: 60rpx;
  margin-left: 50rpx;
  display: inline-block;
  overflow: hidden;
  position: relative;
}
.container .colorPicker .level1 .list .item:last-child {
  margin-right: 50rpx;
}
.container .colorPicker .level1 .list .item .check {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  z-index: 99;
  width: 30rpx;
  height: 30rpx;
  display: block;
}
.container .colorPicker .level2 {
  display: flex;
  justify-content: center;
  padding-bottom: 30rpx;
}
.container .colorPicker .level2 .item {
  width: 60rpx;
  height: 40rpx;
  position: relative;
}
.container .colorPicker .level2 .item .check {
  position: absolute;
  top: 6rpx;
  left: 16rpx;
  z-index: 99;
  width: 30rpx;
  height: 30rpx;
  display: block;
}
.container .decoratePicker {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 999;
  width: 100%;
  background: #fff;
  height: 220rpx;
}
.container .decoratePicker .list {
  width: 100%;
  overflow-x: scroll;
  padding-top: 40rpx;
}
.container .decoratePicker .list .item {
  width: 220rpx;
  margin-left: 50rpx;
  display: inline-block;
}
.container .decoratePicker .list .item:last-child {
  margin-right: 50rpx;
}
.container .decoratePicker .list .item .img {
  width: 220rpx;
  display: block;
}
