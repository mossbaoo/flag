.container .pageTop {
  text-align: center;
  padding: 50rpx 0;
}
.container .pageTop .title {
  font-size: 36rpx;
  color: #333;
  line-height: 60rpx;
}
.container .pageTop .title text {
  font-weight: bold;
  font-size: 40rpx;
  color: #ff6600;
}
.container .pageTop .text {
  font-size: 30rpx;
  color: #333;
  line-height: 50rpx;
}
.container .pageTop .tips {
  font-size: 28rpx;
  color: #666;
  line-height: 50rpx;
}
.container .pageTop .tips text {
  color: #ff6600;
}
.container .main {
  display: flex;
}
.container .main .item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.container .main .item .title {
  font-size: 30rpx;
  color: #333;
  line-height: 80rpx;
}
.container .main .item .img text {
  width: 250rpx;
  height: 250rpx;
  line-height: 250rpx;
  text-align: center;
  border: 1px solid #ddd;
  font-size: 60rpx;
  color: #ddd;
  background: #f5f5f5;
  border-radius: 50%;
  display: block;
}
.container .main .item .img image {
  width: 250rpx;
  height: 250rpx;
  border-radius: 50%;
  display: block;
}
