page {
  background: #f5f5f5;
}
.container {
  padding-top: 320rpx;
  transition: all .5s;
}
.container.on {
  padding-top: 220rpx;
}
.container .backhome {
  position: fixed;
  top: 25px;
  left: 15rpx;
  z-index: 99999999;
  width: 158rpx;
  height: 58rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 58rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(0, 0, 0, 0.15);
}
.container .backhome button {
  flex: 1;
  height: 34rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0;
  border-radius: 0;
}
.container .backhome button text {
  font-size: 34rpx;
  color: #fff;
  font-weight: bold;
}
.container .backhome button:first-child {
  border-right: 1rpx solid rgba(255, 255, 255, 0.2);
}
.container .user {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: linear-gradient(#ff6600, #ff9933);
  padding: 70rpx 50rpx 20rpx;
  transition: all .5s;
  box-sizing: border-box;
}
.container .user .head {
  transition: all .3s;
}
.container .user .head image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  display: block;
  transition: all .1s;
}
.container .user .name {
  font-size: 30rpx;
  color: #fff;
  line-height: 80rpx;
}
.container .user.on {
  padding: 50rpx 50rpx 10rpx;
}
.container .user.on .head image {
  width: 80rpx;
  height: 80rpx;
}
.container .list {
  margin-top: 20rpx;
  background: #fff;
}
.container .list .item {
  border-bottom: 1px solid #eaeaea;
}
.container .list .item:last-child {
  border-bottom: none;
}
.container .list .item button {
  display: flex;
  justify-content: space-between;
  padding: 0 50rpx;
  height: 100rpx;
  align-items: center;
}
.container .list .item button .left {
  display: flex;
  height: 100rpx;
  align-items: center;
}
.container .list .item button .left image {
  display: block;
  width: 40rpx;
}
.container .list .item button .left text {
  font-size: 30rpx;
  color: #333;
  padding-left: 20rpx;
}
.container .list .item button .right text {
  font-size: 30rpx;
  color: #999;
}
