.container .content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.container .content .top {
  width: 700rpx;
  display: flex;
  padding-top: 100rpx;
}
.container .content .top .time {
  flex: 1;
  text-align: center;
}
.container .content .top .time .text {
  font-size: 34rpx;
  color: #333;
  line-height: 50rpx;
}
.container .content .top .time .num {
  font-size: 60rpx;
  color: #ff6600;
  line-height: 150rpx;
}
.container .content .top .count {
  flex: 1;
  text-align: center;
}
.container .content .top .count .text {
  font-size: 34rpx;
  color: #333;
  line-height: 50rpx;
}
.container .content .top .count .num {
  font-size: 70rpx;
  color: #ff6600;
  line-height: 150rpx;
}
.container .content .button {
  padding-top: 450rpx;
}
.container .content .button button {
  width: 300rpx;
  height: 300rpx;
  line-height: 300rpx;
  border-radius: 50%;
  box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.5);
  font-size: 50rpx;
}
.container .fixed_mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 98;
  background: rgba(0, 0, 0, 0.6);
}
.container .fixed_box {
  position: fixed;
  top: 400rpx;
  left: 50rpx;
  width: 650rpx;
  z-index: 99;
  background: #fff;
  border-radius: 10rpx;
  padding: 30rpx;
  box-sizing: border-box;
}
.container .fixed_box .title {
  font-size: 40rpx;
  color: #333;
  line-height: 80rpx;
  text-align: center;
}
.container .fixed_box .text {
  font-size: 30rpx;
  color: #666;
  line-height: 50rpx;
  text-align: center;
}
.container .fixed_box .button {
  padding-top: 50rpx;
}
.container .fixed_box .button .btn1 {
  background: #ff6600;
  color: #fff;
  font-size: 30rpx;
  line-height: 80rpx;
}
.container .fixed_box .button .btn2 {
  border: 1px solid #ccc;
  color: #333;
  font-size: 30rpx;
  margin-top: 30rpx;
  line-height: 80rpx;
}
